@model Admin.AdminFormViewModel;
@section Breadcrumbs{
    <div class="div-section">
        <span>Admin</span>
    </div>
}

<form method="Post" class="profile-information">
    <table>
        <tr>
            <td>Username</td>
            <td><input asp-for="@Model.Username"></td>
            <td><span asp-validation-for="Username" id="validation-message"></span></td>
        </tr>
        <tr>
            <td>Password</td>
            <td><input type="password" asp-for="@Model.Password"></td>
            <td><span asp-validation-for="Password" id="validation-message"></span></td>
        </tr>
        <tr>
            <td>Confirm Password</td>
            <td><input type="password" asp-for="@Model.ConfirmPassword"></td>
            <td><span asp-validation-for="ConfirmPassword" id="validation-message"></span></td>
        </tr>
        <tr>
            <td><input asp-for="@Model.Role" value="Admin" hidden></td>
        </tr>
        <tr>
            <td><button type="submit" id="button-insert-admin">Save New Admin</button></td>
        </tr>
    </table>
</form>